.page-classic {
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
cover-image {
  margin: 0 auto;
  width: 100rpx;
}
.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  padding: 16rpx;
  box-sizing: border-box;
}
.header .left {
  flex: 1;
  text-overflow: ellipsis;
  overflow: hidden;
}

.header {
  border-top: 1rpx solid #eee;
}
.header .share {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
}

.move {
  width: 100%;
}
.page-classic .nav {
  position: absolute;
  bottom: 40rpx;
}