.container {
  display: flex;
  justify-content: space-between;
  width: 500rpx;
  margin: 0 auto;
  padding: 10rpx;
  background-color: #f5f5f5;
}
.container text {
  display: block;
  overflow: hidden;
  max-width: 450rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.container image {
  width: 20rpx;
  height: 20rpx;
  margin: 15rpx 10rpx 0;
}
