.container .banner {
  position: relative;
}
.container {
  text-align: center;
}
.banner image {
  width: 100%;
}
.container .banner text {
  position: absolute;
  padding: 20rpx;
  left: 0rpx;
  bottom: 20rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 40rpx;
}
.container .desc {
  display: inline-block;
  margin: 20rpx auto;
  max-width: 500rpx;
  margin-top: 20rpx;
  padding: 0 0.32rpx;
  text-align: center;
  font-size: 28rpx;
  text-align: left;
  color: #666;
}